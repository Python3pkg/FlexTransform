{
	"DocumentHeaderData": {
		"fields": {
			"reportId": {
				"description": "A unique identifier for the report (not GUID)",
				"valuemap": "description",
				"datatype": "string",
				"defaultValue": "NoValue",
				"required": true,
				"ontologyMappingType": "simple",
				"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#LocalDocumentIdentifierSemanticConcept"
			},
			"title": {
				"description": "Title of the iSight report",
				"valuemap": "title",
				"datatype": "string",
				"defaultValue": "NoValue",
				"required": false,
				"ontologyMappingType": "simple",
				"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#ReportTitleSemanticComponent"
			},
			"execSummary": {
				"description": "A short summary of the report content",
				"valuemap": "execSummary",
				"datatype": "string",
				"defaultValue": "",
				"required": false,
				"ontologyMappingType": "simple",
				"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#ReportExecutiveSummarySemanticConcept"
			},
			"publishDate": {
				"description": "Time the report was generated",
				"valuemap": "timestamp", 
				"datatype": "datetime",
				"dateTimeFormat": "%B %d, %Y %I:%M:%S %p",
				"defaultValue": "&now()",
				"required": true,
				"ontologyMappingType": "simple",
				"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#DocumentGeneratedTimeSemanticConcept"
			},
			"version": {
				"description": "The document version number",
				"valuemap": "version", 
				"datatype": "int",
				"required": true,
				"defaultValue": "1",
				"ontologyMappingType": "simple",
				"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#DocumentVersionSemanticConcept"
			},
			"analysis": {
				"description": "A detailed description of the of the data in the report",
				"valuemap": "analysis", 
				"datatype": "string",
				"required": false,
				"ontologyMappingType": "simple",
				"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#ReportDetailedDescriptionSemanticConcept"
			},
			"riskRating": {
				"description": "A qualitative assessment of the risk of the activity",
				"valuemap": "riskRating",
				"datatype": "string",
				"required": true,
				"ontologyMappingType": "simple",
                                "ontologyMapping": "http://www.anl.gov/cfm/transform.owl#iSightQualitativeActivityRiskSemanticConcept"
			}
		}
	},
	"IndicatorData": {
		"types": {
			"DNS-Hostname-Block": [ 
				{ "domain": "*", "ip": "*" },
				{ "domain": "*" }
			],
			"IPv4-Address-Block": [
				{ "ip": "*" }
			]
		},
		"fields": {
			"ip": {
				"description": "The IP address value",
				"valuemap": "ip",
				"datatype": "string",
				"required": false,
				"ontologyMappingType": "referencedEnum",
				"ontologyEnumField": "domain",
				"ontologyMappingEnumValues": {
                                    "": {
 					"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#IPv4AddressIndicatorValueSemanticConcept"
				    },
                                    "*": {
 					"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#DerivedFromDomainIPv4IndicatorValueSemanticConcept"
				    }
				}
			},
			"domain": {
				"description": "A host/domain name value",
				"valuemap": "domain",
				"datatype": "string",
				"required": false,
				"ontologyMappingType": "simple",
				"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#DNSIndicatorValueSemanticComponent"
			},
			"asn": {
				"description": "The ASN of the associated IP address(es)",
				"valuemap": "asn", 
				"datatype": "string",
				"required": false,
				"ontologyMappingType": "simple",
				"ontologyMapping": "http://www.anl.gov/cfm/transform.owl#DerivedFromIPv4ASNIndicatorTypeSemanticConcept"
			},
			"identifier": {
				"description": "Characterizes the data according to its source (original attacker, compromised host, etc...",
				"valuemap": "identifier", 
				"datatype": "enum",
				"defaultValue": "Attacker",
				"required": true,
				"ontologyMappingType": "enum",
				"enumValues": {
					"Attacker": {
				                "ontologyMapping": "http://www.anl.gov/cfm/transform.owl#OriginalAttackerIndicatorSourceCharacterizationSemanticComponent"
					},
					"Compromised": {
				                "ontologyMapping": "http://www.anl.gov/cfm/transform.owl#OriginalAttackerIndicatorSourceCharacterizationSemanticComponent"
					}
				}
			}
		}
	}
}